#!/usr/bin/env ruby

puts "\n\n\nTIC-TAC-TOE Game\n\n"

puts 'Player 1, enter your name:'
player_one_name = gets.chomp
puts 'Player 2, enter your name:'
player_two_name = gets.chomp

puts "Current Score: \n\t\t Player #{player_one_name}: 0\n\t\t Player #{player_two_name}: 0\n\n"

puts "Turn of Player #{player_one_name} \n\n"

puts 'Choose were to place mark by selecting one of the number from 1-9, as shown below:'
puts '1 | 2 | 3 '
puts '--------- '
puts '4 | 5 | 6 '
puts '--------- '
puts '7 | 8 | 9 '

current_player_input = gets.chomp

puts "Player #{player_one_name} has chosen input #{current_player_input}, continue? Y/N"

player_continues = gets.chomp
puts "player has decided chosen #{player_continues}"

puts 'invalid move selected, please enter a valid number'

current_player_input = gets.chomp

puts "Player #{player_one_name} has chosen input #{current_player_input}, continue? Y/N"

player_continues = gets.chomp
puts "player has decided chosen #{player_continues}"

puts 'O | X |   '
puts '--------- '
puts '  | O |   '
puts '--------- '
puts '  |   |   '

puts "Turn of Player #{player_two_name} \n\n"

puts 'Choose were to place mark by selecting one of the number from 1-9, as shown below:'
puts '1 | 2 | 3 '
puts '--------- '
puts '4 | 5 | 6 '
puts '--------- '
puts '7 | 8 | 9 '

current_player_input = gets.chomp

puts "Player #{player_two_name} has chosen input #{current_player_input}, continue? Y/N"

player_continues = gets.chomp
puts "player has decided chosen #{player_continues}"

puts 'O | X | X '
puts '--------- '
puts '  | O |   '
puts '--------- '
puts '  |   |   '

puts "Turn of Player #{player_one_name} \n\n"

puts 'Choose were to place mark by selecting one of the number from 1-9, as shown below:'
puts '1 | 2 | 3 '
puts '--------- '
puts '4 | 5 | 6 '
puts '--------- '
puts '7 | 8 | 9 '

current_player_input = gets.chomp

puts "Player #{player_two_name} has chosen input #{current_player_input}, continue? Y/N"

player_continues = gets.chomp
puts "player has decided chosen #{player_continues}"

puts 'O | X | X '
puts '--------- '
puts '  | O |   '
puts '--------- '
puts '  |   | O '

puts "Game finished, #{player_one_name} has won"

puts "Current score, #{player_one_name}: 1, #{player_two_name} : 0"
